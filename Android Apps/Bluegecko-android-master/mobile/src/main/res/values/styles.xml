<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseAppThemeOverride.Light">
        <item name="android:windowBackground">@color/gallery</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/primaryDarker</item>
    </style>

    <!-- Styles -->
    <style name="HeadLine" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/text_size_headline</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subhead" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">none</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_size_caption</item>
        <item name="android:textColor">?android:attr/textColorHint</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Tab" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">@dimen/text_size_tab</item>
        <item name="android:textColor">@color/device_tab_text</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="TabRed" parent="Tab">
        <item name="android:textColor">@color/device_tab_red_text</item>
    </style>

    <style name="ThermoLabelText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/thermo_label_text_size</item>
        <item name="android:color">@color/boulder</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SwitchText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/empty_thermo_subheader_text_size</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ThermoValueText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/thermo_value_text_size</item>
        <item name="android:color">@color/masala</item>
    </style>

    <style name="ThermoTextButton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/thermo_label_text_size</item>
        <item name="android:textColor">@color/outline_button_text_color</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ThermoGraphTimeText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/thermo_graph_time_text_size</item>
    </style>

    <style name="DemoItemStyle" parent="Base.Widget.AppCompat.ListView">
        <item name="android:layout_marginTop">@dimen/item_padding</item>
        <item name="android:layout_marginBottom">@dimen/item_padding</item>
        <item name="android:layout_marginEnd">@dimen/demo_item_padding_hor</item>
        <item name="android:layout_marginStart">@dimen/demo_item_padding_hor</item>
        <item name="android:background">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <style name="UnitSelectorText" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/unit_circle_selector</item>
        <item name="android:textSize">@dimen/thermo_value_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SliderBarAppearance" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/seekbar_drawable</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">8dp</item>
    </style>

</resources>
